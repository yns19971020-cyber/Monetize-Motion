{
  "expo": {
    "name": "ViralPay",
    "slug": "viralpay",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "viralpay",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.viralpay.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0A0A0A",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.viralpay.app"
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A0A0A",
          "dark": {
            "backgroundColor": "#0A0A0A"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ViralPay to access your camera to record videos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ViralPay to access your photos to upload videos."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow ViralPay to access your photos.",
          "savePhotosPermission": "Allow ViralPay to save photos."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
